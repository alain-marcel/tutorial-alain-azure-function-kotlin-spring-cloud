root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 900
ij_any_wrap_long_lines = false

# Source files
[*.{gradle, java, json, ps1, psm1, scala, yml}]
ij_any_block_brace_style = end_of_line
ij_any_method_brace_style = end_of_line
ij_any_class_brace_style = end_of_line
ij_any_spaces_within_if_parentheses = true
ij_any_space_before_switch_left_brace = true
ij_any_space_before_if_parentheses = true
ij_any_space_before_if_left_brace = true
ij_any_space_before_while_parentheses = true
ij_any_space_before_while_left_brace = true
ij_any_space_before_for_parentheses = true

[*.{ps1, psm1}]
ij_powershell_spaces_around_unary_operator = true

[*.properties]
ij_properties_spaces_around_key_value_delimiter = true
ij_properties_keep_blank_lines = true
ij_properties_align_group_field_declarations = false
ij_properties_key_value_delimiter = equals

[*.bat]
end_of_line = crlf
